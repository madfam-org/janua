{
  "name": "@janua/core",
  "version": "0.1.0",
  "description": "Core services and utilities for Janua platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@simplewebauthn/server": "^9.0.0",
    "@simplewebauthn/typescript-types": "^8.3.4",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcrypt": "^5.1.1",
    "cron": "^4.3.3",
    "crypto-js": "^4.2.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.3",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cron": "^2.0.1",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "stripe": "^18.5.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.7.2"
  },
  "optionalDependencies": {
    "aws-sdk": "^2.1500.0",
    "messagebird": "^4.0.1",
    "twilio": "^4.19.0"
  },
  "peerDependencies": {
    "redis": "^4.6.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ]
  }
}
