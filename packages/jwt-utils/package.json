{
  "name": "@plinto/jwt-utils",
  "version": "1.0.0",
  "description": "JWT and JWKS utilities for Plinto Identity Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "jose": "^5.2.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plinto/plinto",
    "directory": "packages/jwt-utils"
  },
  "keywords": [
    "plinto",
    "jwt",
    "jwks",
    "authentication",
    "verification",
    "tokens"
  ],
  "author": "Plinto Team",
  "license": "MIT"
}