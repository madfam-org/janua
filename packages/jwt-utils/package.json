{
  "name": "@janua/jwt-utils",
  "version": "0.1.0",
  "description": "JWT and JWKS utilities for Janua Identity Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "jose": "^5.2.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "jest": "^29.7.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.madfam.io/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/madfam-org/janua.git",
    "directory": "packages/jwt-utils"
  },
  "keywords": [
    "janua",
    "jwt",
    "jwks",
    "authentication",
    "verification",
    "tokens"
  ],
  "author": "Janua Team",
  "license": "AGPL-3.0"
}
