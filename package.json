{
  "name": "janua-monorepo",
  "version": "0.1.0",
  "description": "Janua multi-tenant payment platform",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\"",
    "dev:api": "cd apps/api && python -m uvicorn app.main:app --reload",
    "build": "npm run build:packages",
    "build:packages": "npm run build:core && npm run build:sdk",
    "build:core": "cd packages/core && npm run build",
    "build:sdk": "cd packages/typescript-sdk && npm run build",
    "build:all": "npm run build:packages && npm run build:react && npm run build:vue && npm run build:python",
    "build:react": "cd packages/react-sdk && npm run build",
    "build:vue": "cd packages/vue-sdk && npm run build",
    "build:python": "cd packages/python-sdk && python setup.py sdist bdist_wheel",
    "test": "npm run test:packages && npm run test:api",
    "test:coverage": "jest --config jest.config.coverage.js",
    "test:coverage:report": "npm run test:coverage && open coverage/index.html",
    "test:all": "bash scripts/test-all.sh",
    "test:integration": "node scripts/test-integration.js",
    "test:packages": "cd packages/core && npm test",
    "test:api": "cd apps/api && python -m pytest tests/ -v",
    "lint": "npm run lint:packages",
    "lint:packages": "cd packages/core && npm run lint",
    "typecheck": "npm run typecheck:packages",
    "typecheck:packages": "cd packages/core && npm run typecheck",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "db:push": "prisma db push",
    "clean": "bash scripts/cleanup.sh && npm run clean:packages && npm run clean:build",
    "clean:cache": "bash scripts/cleanup.sh",
    "clean:packages": "cd packages/core && npm run clean",
    "clean:build": "rm -rf dist build .next out",
    "clean:python": "find . -type d -name '__pycache__' -exec rm -rf {} + 2>/dev/null; find . -name '*.pyc' -delete",
    "install:all": "npm install && npm run install:packages",
    "install:packages": "cd packages/core && npm install",
    "test:journeys:setup": "docker-compose -f config/docker-compose.test.yml up -d && npm run test:journeys:wait",
    "test:journeys:wait": "bash scripts/wait-for-services.sh",
    "test:journeys:teardown": "docker-compose -f config/docker-compose.test.yml down -v",
    "test:journeys": "npm run test:journeys:setup && npx playwright test tests/e2e/journeys && npm run test:journeys:teardown",
    "test:journeys:local": "npx playwright test tests/e2e/journeys --headed --debug",
    "test:journeys:ci": "npx playwright test tests/e2e/journeys --reporter=github",
    "test:journeys:report": "npx playwright show-report"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "babel-jest": "^30.1.2",
    "concurrently": "^8.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jest-transform-stub": "^2.0.0",
    "prisma": "6.1.0",
    "storybook": "^8.6.14",
    "tsx": "^4.6.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@prisma/client": "6.1.0",
    "bcryptjs": "^2.4.3",
    "ioredis": "^5.7.0",
    "messagebird": "^4.0.1",
    "prom-client": "^15.1.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "socket.io": "^4.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.2.79",
      "@types/react-dom": "18.2.25"
    }
  }
}
