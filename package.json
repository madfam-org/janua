{
  "name": "plinto",
  "version": "0.1.0",
  "private": true,
  "description": "Secure substrate for identity - Edge-fast verification with full control",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "jest --coverage --maxWorkers=50%",
    "test:unit": "jest --testPathPattern='.*/src/.*\\.test\\.(ts|tsx)$' --coverage",
    "test:integration": "jest --testPathPattern='.*/tests/integration/.*\\.test\\.ts$' --coverage",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters='text-summary' --coverageThreshold='{\"global\":{\"branches\":100,\"functions\":100,\"lines\":100,\"statements\":100}}'",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd apps/api && alembic upgrade head",
    "db:reset": "cd apps/api && alembic downgrade base && alembic upgrade head",
    "dev:marketing": "cd apps/marketing && yarn dev",
    "dev:app": "cd apps/app && yarn dev",
    "dev:api": "cd apps/api && uvicorn app.main:app --reload"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aureolabs/plinto"
  },
  "author": "Aureo Labs (MADFAM)",
  "license": "PROPRIETARY"
}
