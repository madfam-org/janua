# Janua Website Environment Variables
# Copy this file to .env.local for local development

# ============================================
# PUBLIC URLs (baked into client-side JS)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Production values:
# NEXT_PUBLIC_API_URL=https://api.janua.dev
# NEXT_PUBLIC_APP_URL=https://app.janua.dev

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3001
NEXT_PUBLIC_SITE_NAME="Janua"

# Production:
# NEXT_PUBLIC_SITE_URL=https://janua.dev

# ============================================
# DEMO CONFIGURATION
# ============================================
# Demo environment simulation settings
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_DEMO_TENANT_ID=demo_tenant_123

